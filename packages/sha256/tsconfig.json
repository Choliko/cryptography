{
  "compilerOptions": {
    "noErrorTruncation": true,
    "strict": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": false,
    "target": "es5",
    "module": "system",
    "outFile": "./dist/index.js",
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "esModuleInterop": true,
    "baseUrl": "./src",
  },
  "include": [
    "src/*"
  ]
}
