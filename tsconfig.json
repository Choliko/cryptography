{
  "compilerOptions": {
    "noErrorTruncation": true,
    "strict": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "target": "es5",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "baseUrl": "./src",
    "module": "umd",
    "outDir": "./dist",
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/*"
  ]
}
